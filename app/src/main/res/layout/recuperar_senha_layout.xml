<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:src="@drawable/rocket" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/bbh"
            android:text="Space"
            android:textColor="#FBFBFB"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/bbh"
            android:text="V"
            android:textColor="#EC2C20"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/gabarito"
        android:text="Recuperar Senha"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="32dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        style="@style/Widget.Material3.Chip.Input"
        android:textColorHint="@color/white"
        app:startIconTint="@color/white"
        android:layout_marginBottom="40dp"
        app:startIconDrawable="@drawable/baseline_mail_outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/recuEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:hint="Insira seu Email"
            android:inputType="textEmailAddress"
            />

    </com.google.android.material.textfield.TextInputLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecuEntrar"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Enviar Link"
            android:textColor="#F7F7F7"
            android:textStyle="bold"
            android:textSize="20dp"
            app:backgroundTint="#E33229" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecuCancelar"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="Cancelar"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#E13229"
            app:backgroundTint="#FCFCFC"/>


    </LinearLayout>


</LinearLayout>