<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    android:orientation="vertical"
    tools:context=".RedefinirSenhaActivity">

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/baseline_arrow_back"
        app:iconSize="35dp"
        style="@style/Widget.AppCompat.ActionButton"
        android:text="Voltar"
        android:textSize="24dp"
        android:layout_marginBottom="-60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/rocket" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/bbh"
            android:text="Space"
            android:textColor="#FBFBFB"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/bbh"
            android:text="V"
            android:textColor="#EC2C20"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Insira o Código"
        android:fontFamily="@font/gabarito"
        android:textSize="37dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira o código que foi enviado para o email solicitado."
        android:textSize="22dp"
        android:layout_gravity="center"
        android:fontFamily="@font/gabarito"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="10dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:layout_marginRight="8dp"
            android:hint="0"
            android:textColorHint="@color/white"
            app:helperTextEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="50sp"
                android:layout_height="60sp"
                android:inputType="number"
                android:maxLength="1"
                android:backgroundTint="@color/white"
                android:textAlignment="center"
                android:textSize="25sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:textColorHint="@color/white"
            android:layout_marginRight="8dp"
            android:hint="0">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="50sp"
                android:layout_height="60sp"
                android:inputType="number"
                android:maxLength="1"
                android:backgroundTint="@color/white"
                android:textAlignment="center"
                android:textSize="25sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:textColorHint="@color/white"
            android:layout_marginRight="8dp"
            android:hint="0">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="50sp"
                android:layout_height="60sp"
                android:inputType="number"
                android:backgroundTint="@color/white"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="25sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="50sp"
            android:textColorHint="@color/white"
            android:layout_height="70sp"
            android:layout_marginRight="8dp"
            android:hint="0">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="50sp"
                android:layout_height="60sp"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:backgroundTint="@color/white"
                android:textSize="25sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="50sp"
            android:layout_height="70sp"
            android:textColorHint="@color/white"
            android:layout_marginRight="8dp"
            android:hint="0">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="50sp"
                android:layout_height="60sp"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:backgroundTint="@color/white"
                android:textSize="25sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="50sp"
            android:textColorHint="@color/white"
            android:layout_height="70sp"
            android:layout_marginRight="8dp"
            android:hint="0">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="50sp"
                android:layout_height="60sp"
                android:inputType="number"
                android:backgroundTint="@color/white"
                android:maxLength="1"
                android:textAlignment="center"
                android:textSize="25sp" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reenviar código"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/gabarito"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRedefinirConf"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Confirmar"
        android:textColor="#F7F7F7"
        android:textStyle="bold"
        android:textSize="27dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:backgroundTint="#E33229" />


</LinearLayout>